{
  "manifest_version": 3,
  "name": "Ad Accelerator",
  "version": "0.0.0.1",
  "description": "Detects if an add is playing, mutes the video and dramatically increases speed.",
  "permissions": ["webNavigation", "scripting"],
  "host_permissions": ["*://*.youtube.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
        "matches": ["*://*.youtube.com/*"],
        "js": ["content.js"],
        "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "assets/images/icon16.png",
    "32": "assets/images/icon32.png",
    "48": "assets/images/icon48.png",
    "128": "assets/images/icon128.png"
  }
}